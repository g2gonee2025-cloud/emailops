apiVersion: apps/v1
kind: Deployment
metadata:
  name: gpu-buffer
  namespace: emailops
spec:
  # buffer size (0 to disable, 1 to keep warm)
  replicas: 0
  selector:
    matchLabels:
      app: gpu-buffer
  template:
    metadata:
      labels:
        app: gpu-buffer
    spec:
      priorityClassName: emailops-low-priority
      containers:
      - name: pause
        image: k8s.gcr.io/pause:3.1
        resources:
          limits:
            nvidia.com/gpu: "1"
            cpu: "50m"
            memory: "64Mi"
          requests:
            nvidia.com/gpu: "1"
            cpu: "10m"
            memory: "32Mi"
      nodeSelector:
        doks.digitalocean.com/node-pool: ${NODE_POOL}
      tolerations:
      - key: "nvidia.com/gpu"
        operator: "Exists"
        effect: "NoSchedule"
